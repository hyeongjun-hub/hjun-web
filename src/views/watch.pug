extends base

block content 
    div#videoContainer(data-id=video._id)
        if isHeroku 
            video(src=video.fileUrl)#video
        else
            video(src="/"+video.fileUrl)#video
        div#videoControls.videoControls
            div.videoControls__play
                span#play.videoControls__playBtn
                    i.fas.fa-play
                div.videoControls__time
                    span#currentTime 00:00
                    span  / 
                    span#totalTime 00:00
            input(type="range",step="1", value="0", min="0")#timeline.videoControls__timeline
            div.videoControls__volume
                input(type="range",step="0.1", value=0.5, min="0", max="1")#volume
                span#mute
                    i.fas.fa-volume-up
            div.videoControls__fullScreen
                span#fullScreen
                    i.fas.fa-expand
    div.videoInfoBox    
        div.videoInfo
            div.videoInfo__data
                div.videoInfo__data-hash
                    each hashtag in video.hashtags
                        span #{hashtag } 
                h1=video.title
                div.videoInfo__data-meta
                    h6 #{video.meta.views} views 
                    span ‚Ä¢
                    small=video.createdAt
            div.videoInfo__anch
                div.videoInfo__anchBox
                    if String(video.owner._id) === String(loggedInUser._id)
                        a(href=`${video.id}/edit`) Edit Video 
                        a(href=`${video.id}/delete`) Delete Video 

        div.videoInfo2
            div.videoInfo2__owner
                if !loggedInUser.avatarUrl
                    span.small__avatar üòÄ
                else 
                    if isHeroku
                        img(src=`${video.owner.avatarUrl}`).small__avatar
                    else 
                        img(src="/"+`${video.owner.avatarUrl}`).small__avatar
                div.videoInfo2__owner-link
                    small Uploaded by 
                    a(href=`/users/${video.owner._id}`)=video.owner.name
            div.videoInfo2__para
                p=video.description 
                
        

    div.video__comments 
        h1 Comments
        ul 
            each comment in video.comments.reverse()
                li.video__comment(data-id=comment.id)
                    i.fas.fa-comment 
                    div.video__comment-text
                        span#comment-text  #{comment.text}
                        if String(comment.owner._id) === String(loggedInUser._id)
                            h6#delete-comment  ‚ùå
        if loggedIn
            div.video__add-comments 
                form.video__comment-form#commentForm 
                    textarea(cols="50", rows="5", placeholder="Write a nice comment...")
                    button Add comment

block scripts 
    script(src="/static/js/videoPlayer.js")
    if loggedIn    
        script(src="/static/js/commentSection.js")
