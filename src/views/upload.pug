extends base

block content
     div.upload__container
        div.upload__video
            video#preview
            button#actionBtn.social__btn Start Recording for 3s
        if errorMessage
            span=errorMessage
        form(method="POST", enctype="multipart/form-data")
            label(for="video") Video File
            input(type="file", accept="video/*", id="video", name="video")
            label(for="thumb") Thumbnail File / Image File
            input(type="file", accept="image/*", required, id="thumb", name="thumb")
            input(placeholder="Title", required, type="text", name="title", maxlength=80)
            input(placeholder="Description", type="text", name="description", minlength=2)
            input(placeholder="Hashtags, separated by comma.", type="text", name="hashtags")
            input(type="submit", value="Upload Video")
            
block scripts 
    script(src="/static/js/recorder.js")